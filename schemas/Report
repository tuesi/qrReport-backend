const mongoose = require('mongoose');

const ReportSchema = new mongoose.Schema({
    name: {
        type: String,
        required: true
    },
    message: {
        type: String,
        required: false
    },
    notes: {
        type: String,
        required: false
    },
    location: {
        type: String,
        required: false
    },
    deviceId: {
        type: String,
        required: true
    },
    created: {
        type: Date,
        required: true
    },
    dateCompleted: {
        type: Date,
        required: true
    }
})

module.exports = mongoose.model('Report', ReportSchema);